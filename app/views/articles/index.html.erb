
<div class="mt-20">


  <h1>Articles listing page:</h1>

  <table class="min-w-full table-auto">
    <thead class="bg-gray-800 text-gray-300">
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
      <tr class="border-4 border-gray-200">
        <td><%= article.id  %></td>  
        <td><%= article.title  %></td>  
        <td><%= article.description  %></td>  
        <td> <%= link_to 'Show', article %></td>
        <td> <%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Delete', article, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= button_to 'Create Article', new_article_path, class: "mb-4 mt-4 ml-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded", method: :get %>
</div>